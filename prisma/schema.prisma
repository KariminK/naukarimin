generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Section {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  chapter   Chapter @relation(fields: [chapterId], references: [id])
  chapterId Int
}

model Chapter {
  id         Int       @id @default(autoincrement())
  title      String
  sections   Section[]
  language   Language  @relation(fields: [languageId], references: [id])
  languageId Int
}

model Language {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  chapters    Chapter[]
}
